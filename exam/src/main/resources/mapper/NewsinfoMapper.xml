<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.exam.mapper.NewsinfoMapper">
    <update id="update" parameterType="Newsinfo">
        UPDATE newsinfo SET title = #{title}, author = #{author}, content = #{content} Where
        nid = #{nid}
    </update>


    <delete id="deleteNewsById">
        DELETE FROM `newsinfo` WHERE `nid`=#{nid}
    </delete>
</mapper>
